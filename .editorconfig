# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

# 2 spaces for JS/JSON, HTML, CSS/SASS and Markdown
[*.{js,json,html,css,scss,sass,less,md}]
indent_size = 2

# Hard TAB for Makefile
[Makefile]
indent_style = tab
