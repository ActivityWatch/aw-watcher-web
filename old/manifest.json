{
  "manifest_version": 2,

  "name": "ActivityWatch Web Watcher",
  "description": "This extension logs the current tab and your browser activity to ActivityWatch.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
        "client.js",
        "eventPage.js"
    ],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "alarms",
    "activeTab",
    "http://127.0.0.1:5600/",
    "http://127.0.0.1:5666/"
  ]
}
